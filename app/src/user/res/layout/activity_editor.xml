<ScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/coordinator_layout_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:elevation="@dimen/button_elevation"
            android:text="@string/button_text"
            android:textColor="@color/textColorPrimary"
            app:layout_constraintEnd_toEndOf="@+id/textview_editor_status"
            app:layout_constraintStart_toStartOf="@+id/textview_editor_status"
            app:layout_constraintTop_toBottomOf="@+id/textview_editor_origin_destination" />

        <ImageView
            android:id="@+id/icon_map"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/icon_map"
            app:layout_constraintBottom_toBottomOf="@+id/textview_editor_origin_destination"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textview_editor_date" />

        <ImageView
            android:id="@+id/icon_dog_tag"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/ic_dog_tag"
            app:layout_constraintStart_toStartOf="@+id/icon_map"
            app:layout_constraintTop_toTopOf="@+id/animal_photo" />

        <ImageView
            android:id="@+id/animal_photo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="@+id/textview_editor_origin_destination"
            app:layout_constraintTop_toBottomOf="@+id/button"
            tools:srcCompat="@tools:sample/avatars[0]" />

        <ImageView
            android:id="@+id/icon_notes"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/icon_notes"
            app:layout_constraintStart_toStartOf="@+id/textview_editor_weight_label"
            app:layout_constraintTop_toTopOf="@+id/textview_editor_notes_field" />

        <TextView
            android:id="@+id/textview_editor_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="@color/textColorPrimary"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Help needed" />

        <TextView
            android:id="@+id/textview_editor_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="TextView"
            android:textColor="@color/textColorPrimary"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/textview_editor_status"
            app:layout_constraintStart_toStartOf="@+id/textview_editor_status"
            app:layout_constraintTop_toBottomOf="@+id/textview_editor_status"
            tools:text="Aug 12, 2019" />


        <TextView
            android:id="@+id/textview_editor_origin_destination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="TextView"
            android:textColor="@color/textColorPrimary"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/textview_editor_status"
            app:layout_constraintStart_toStartOf="@+id/textview_editor_status"
            app:layout_constraintTop_toBottomOf="@+id/textview_editor_date"
            tools:text="Stockton to San Bruno" />

        <TextView
            android:id="@+id/textview_editor_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/category_name"
            android:textColor="@color/textColorSecondary"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/textview_editor_name_field"
            app:layout_constraintStart_toStartOf="@+id/textview_editor_transportId"
            app:layout_constraintTop_toTopOf="@+id/textview_editor_name_field" />

        <TextView
            android:id="@+id/textview_editor_name_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/textColorPrimary"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/textview_editor_transportId_field"
            app:layout_constraintTop_toBottomOf="@+id/textview_editor_transportId_field"
            tools:text="Toby" />

        <TextView
            android:id="@+id/textview_editor_gender_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/category_gender"
            android:textColor="@color/textColorSecondary"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/textview_editor_gender_field"
            app:layout_constraintStart_toStartOf="@+id/textview_editor_name_label"
            app:layout_constraintTop_toTopOf="@+id/textview_editor_gender_field" />

        <TextView
            android:id="@+id/textview_editor_gender_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/textColorPrimary"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/textview_editor_name_field"
            app:layout_constraintTop_toBottomOf="@+id/textview_editor_name_field"
            tools:text="Male" />

        <TextView
            android:id="@+id/textview_editor_weight_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/category_measurement"
            android:textColor="@color/textColorSecondary"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/textview_editor_weight_field"
            app:layout_constraintStart_toStartOf="@+id/textview_editor_gender_label"
            app:layout_constraintTop_toTopOf="@+id/textview_editor_weight_field" />

        <TextView
            android:id="@+id/textview_editor_weight_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/textColorPrimary"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/textview_editor_gender_field"
            app:layout_constraintTop_toBottomOf="@+id/textview_editor_gender_field"
            tools:text="55 lbs" />

        <TextView
            android:id="@+id/textview_editor_notes_field"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:textColor="@color/textColorPrimary"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textview_editor_weight_field"
            app:layout_constraintTop_toBottomOf="@+id/textview_editor_weight_field"
            tools:text="Harness and/or crate recommended. This can be done on Saturday or Sunday." />

        <TextView
            android:id="@+id/textview_editor_transportId_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/textColorPrimary"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/animal_photo"
            app:layout_constraintTop_toBottomOf="@+id/animal_photo"
            tools:text="#111111" />

        <TextView
            android:id="@+id/textview_editor_copy_destination"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="20dp"
            android:text="To..."
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/button" />

        <TextView
            android:id="@+id/textview_editor_transportId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_transport_id"
            android:textColor="@color/textColorSecondary"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/textview_editor_transportId_field"
            app:layout_constraintStart_toStartOf="@+id/icon_dog_tag"
            app:layout_constraintTop_toTopOf="@+id/textview_editor_transportId_field" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/colorDivider"
            app:layout_constraintBottom_toTopOf="@+id/animal_photo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>


