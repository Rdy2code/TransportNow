<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/table_head"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="@color/colorPrimaryLight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/table_body"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@id/textview_editor_name_field"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/table_head"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/pet_name_label"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="Name"
        android:gravity="center_horizontal"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="@+id/table_head"
        app:layout_constraintEnd_toStartOf="@+id/gender_label"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/table_head"
        app:layout_constraintTop_toTopOf="@+id/table_head" />

    <TextView
        android:id="@+id/gender_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender"
        android:gravity="center_horizontal"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="@+id/table_head"
        app:layout_constraintEnd_toStartOf="@+id/weight_label"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/pet_name_label"
        app:layout_constraintTop_toTopOf="@+id/table_head" />

    <TextView
        android:id="@+id/weight_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weight"
        android:gravity="center_horizontal"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="@+id/table_head"
        app:layout_constraintEnd_toStartOf="@+id/transport_id_label"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/gender_label"
        app:layout_constraintTop_toTopOf="@+id/table_head" />

    <TextView
        android:id="@+id/transport_id_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transport ID"
        android:gravity="center_horizontal"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="@+id/table_head"
        app:layout_constraintEnd_toEndOf="@+id/table_head"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/weight_label"
        app:layout_constraintTop_toTopOf="@+id/table_head" />

    <TextView
        android:id="@+id/textview_editor_name_field"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="@+id/pet_name_label"
        app:layout_constraintLeft_toLeftOf="@+id/table_body"
        app:layout_constraintStart_toStartOf="@+id/pet_name_label"
        app:layout_constraintTop_toTopOf="@+id/table_body"
        tools:text="Toby" />

    <TextView
        android:id="@+id/textview_editor_gender_field"
        android:layout_width="126dp"
        android:layout_height="75dp"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="@+id/gender_label"
        app:layout_constraintStart_toStartOf="@+id/gender_label"
        app:layout_constraintTop_toBottomOf="@+id/table_head"
        tools:text="Male" />

    <TextView
        android:id="@+id/textview_editor_weight_field"
        android:layout_width="126dp"
        android:layout_height="75dp"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="@+id/weight_label"
        app:layout_constraintStart_toStartOf="@+id/weight_label"
        app:layout_constraintTop_toBottomOf="@+id/table_head"
        tools:text="55 lbs" />

    <TextView
        android:id="@+id/textview_editor_transportId_field"
        android:layout_width="126dp"
        android:layout_height="75dp"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="@+id/transport_id_label"
        app:layout_constraintStart_toStartOf="@+id/transport_id_label"
        app:layout_constraintTop_toBottomOf="@+id/table_head"
        tools:text="000000000000000" />

    <TextView
        android:id="@+id/textview_editor_notes_field"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/textColorPrimary"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/icon_notes"
        app:layout_constraintTop_toBottomOf="@+id/table_body"
        tools:text="@string/placeholder_text_notes_field" />

    <ImageView
        android:id="@+id/icon_notes"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/icon_notes"
        android:contentDescription="@string/content_description_notes_icon"
        app:layout_constraintBottom_toTopOf="@+id/textview_editor_notes_field"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_editor_notes_field" />


</androidx.constraintlayout.widget.ConstraintLayout>